<?xml version="1.0" encoding="UTF-8"?>

<phpunit 
    colors="true" 
    stopOnFailure="false" 
    bootstrap="bootstrap_phpunit.php">
    <php>
        <const name="CIUnit_Version" value="0.17"/>
        <const name="ROOT" value="1"/>
        <const name="WRITER" value="2"/>
        <const name="PUBLISHER" value="3"/>
        <const name="DIRECTOR" value="4"/>
        <const name="ACCOUNTING" value="5"/>
        <const name="TESTER" value= "1"/>
        <server name="SERVER_NAME" value="http://example.com" />
    </php>
    <testsuites>
        <testsuite name="ApiTests">
            <directory suffix=".php">api</directory>
        </testsuite>
    </testsuites>
</phpunit>
